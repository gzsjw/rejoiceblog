<%= form_for(@post_article, html: {class: "form-horizontal"}) do |f| %>
  <% if @post_article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post_article.errors.count, "error") %> prohibited this post_article from being saved:</h2>

      <ul>
      <% @post_article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, "主题", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder:"主题" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :notes, "内容", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :notes, class: 'form-control', placeholder:"内容", rows:7 %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :image, "图片", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image, class: 'form-control', placeholder:"图片" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :category, "分类", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :category, class: 'form-control', placeholder:"分类" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :keywords, "标签", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :keywords, class: 'form-control', placeholder:"标签" %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "发表",class:"btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
